{
  "manifest_version": 3,
  "name": "NeetHelp",
  "description": "Provides video solutions from NeetCode to help you with your coding problems",
  "version": "1.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "/icons/icon16.png",
      "24": "/icons/icon24.png",
      "32": "/icons/icon32.png",
      "48": "/icons/icon48.png",
      "128": "/icons/icon128.png"
    }
  },
 

  "content_scripts": [
    {
      "matches": ["https://leetcode.com/problems/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["storage"]
}
